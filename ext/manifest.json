{
  "name": "El tiempo en Madrid",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Visualiza el tiempo desde Chrome.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "persistent": false,
    "scripts" : ["js/eventPage.js"]
  },
  "browser_action": {
    "default_icon": "icons/spinner.gif"
  },
  "permissions": [
    "http://api.openweathermap.org/data/*",
    "alarms"
  ]
}